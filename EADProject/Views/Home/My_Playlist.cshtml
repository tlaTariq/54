
@{
    ViewBag.Title = "My_Playlist";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div id="body">

    <div class="header">
        @{string url = HttpContext.Current.Request.Url.AbsoluteUri;}
        <ul>

            <li class="selected">
                <a>categories</a>
            </li>


            @if (url.Contains("Rock"))
            {
                <li class="selected">
                    <a href=@Url.Content("~/Home/Rock")>Rock</a>
                </li>
            }
            else
            {
                <li>
                    <a href=@Url.Content("~/Home/Rock")>Rock</a>
                </li>
            }

            @if (url.Contains("Pop"))
            {
                <li class="selected">
                    <a href=@Url.Content("~/Home/Pop")>Pop</a>
                </li>
            }
            else
            {
                <li>
                    <a href=@Url.Content("~/Home/Pop")>Pop</a>
                </li>
            }

            @if (url.Contains("Jazz"))
            {
                <li class="selected">
                    <a href=@Url.Content("~/Home/Jazz")>Jazz</a>
                </li>
            }
            else
            {
                <li>
                    <a href=@Url.Content("~/Home/Jazz")>Jazz</a>
                </li>
            }

        </ul>
        @if (Session["Login"] != null)
            {
            <div>
                <button href=@Url.Content("~/Home/MyPlaylist") ; style="background-color: crimson; color: aliceblue; background-position:  -153px 0; cursor: pointer; margin: 0 0 0 15px; padding: 0; width: 85px; height: 30px" type="submit"><b>My PlayList</button>
            </div>
        }




    </div>



    <div class="content">
        <h2>songs</h2>
        <ul>

            @{List<EADProject.Models.SongsDTO> list = EADProject.Models.DBHelper.getPlaylistSongs(Convert.ToInt32(Session["ID"]));
                if (Session["Login"] != null && Session["admin"] != null)
                {
                    <br>
                    <li>

                        <a href=@Url.Content("~/Home/Add")>Add a New Song</a>

                    </li>
                }
                for (int i = 0; i < list.Count; i++)
                {
                    <li>
                        July 19, 2023&nbsp;&nbsp;-&nbsp;&nbsp;<b>@list[i].Singer</b>
                        <h1>@list[i].Name</h1>

                        <audio controls>
                            <source src="/Content/songs/@list[i].Link" type="audio/mp3">
                        </audio>

                        @if (Session["Login"] != null && Session["admin"] != null)
                        {

                            <br>

                            <a href=@Url.Content("~/Home/Edit/" + @list[i].SongID)>Edit</a>
                            <a href=@Url.Content("~/Home/Delete/" + @list[i].SongID)>Delete</a>

                        }

                        @if (Session["Login"] != null && Session["user"] != null)
                        {

                            <br>

                            <a href=@Url.Content("~/Home/AddtoPlaylist/" + @list[i].SongID)>Add to MyList</a>
                        }

                    </li>
                }
            }


        </ul>
        <div class="paging">
